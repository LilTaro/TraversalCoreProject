@using EntityLayer.Concrete
@model List<Reservation>
@{
    ViewData["Title"] = "MyApprovalReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    int count = 0;
}

@if (Model.Count() == 0)
    {
       <h2 class="text-danger">Hiç Onay Bekleyen Rezervasyonunuz bulunmamaktadır.</h2>
    }
  else
     {
       <h1>Onay Bekleyen Rezervasyonlar</h1>
     }


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Lokasyon</th>
        <th>Kişi Sayısı</th>
        <th>Rezervasyon Tarihi</th>
        <th>Durum</th>
    </tr>
    @foreach (var item in Model)
    {
        { count += 1; }
        <tr>
            <td>@count</td>
            <td>@item.Destination.DestinationCity</td>
            <td>@item.PersonCount</td>
            <td>@(((DateTime)item.ReservationDate).ToString("dd-MMM-yyyy"))</td>
            <td>@item.Status</td>
        </tr>
    }

</table>

